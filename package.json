{
  "name": "moltgames",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo run typecheck",
    "test": "pnpm test:unit",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:rules": "firebase emulators:exec --config firebase/firebase.json --only firestore \"vitest run firebase/test\"",
    "ci": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test:unit && pnpm test:integration && pnpm test:e2e && pnpm build"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "firebase-admin": "^13.6.1",
    "firebase-tools": "^15.7.0",
    "prettier": "^3.5.2",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
